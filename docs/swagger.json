                "properties": {
                  "name": {
                    "description": "Contact's name",
                    "type": "string",
                    "example": "John Doe"
                  },
                  "phoneNumber": {
                    "description": "Contact's phone number",
                    "type": "number",
                    "example": 681234466
                  },
                  "email": {
                    "description": "Conatct's email",
                    "type": "string",
                    "example": "contactsemail@gmail.com"
                  },
                  "isFavourite": {
                    "description": "is contact favourite",
                    "type": "boolean",
                    "example": true
                  },
                  "contactType": {
                    "description": "Contact type",
                    "type": "string",
                    "enum": [
                      "work",
                      "home",
                      "personal"
                    ]
                  },
                  "photo": {
                    "description": "Link to contacts's photo",
                    "type": "string",
                    "example": "<https://res.cloudinary.com/uqwgdu/image/upload/image.png>"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Creates a Contact",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
